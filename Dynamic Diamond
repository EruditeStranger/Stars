#include <iostream>

using namespace std;

int main()
{
int i,j;
int n;
cout<<"Enter the number of rows a side of your diamond would have \n";
cin>>n;
for(i=1;i<=n;i++)
{
    for(j=n;j>=i;j--)
    {
        cout<<"*";
    }
    for(j=n+1;j<=(i+n);j++)
    {
        cout<<" ";
    }
    for(j=n+2;j<=(i+n);j++)
    {
        cout<<" ";
    }
    for(j=n;j>=i;j--)
    {
        cout<<"*";
    }
    cout<<"\n";
}
for(i=n+1;i<(n*2);i++)
{
    for(j=n;j<=i;j++)
    {
        cout<<"*";
    }
    for(j=(n*2)-1;j>=i;j--)
    {
        cout<<" ";
    }
    for(j=(n*2)-2;j>=i;j--)
    {
        cout<<" ";
    }
    for(j=n;j<=i;j++)
    {
        cout<<"*";
    }
    cout<<"\n";
}
return 0;
}
